<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="header">
        <h1>EpicArkanoid</h1>
    </div>
    <div id ="main__container">
        <fest:if test="json.isAuth">
            <a href="#scoreboard">
                <div class="main__container__elem js-scoreboard">
                    Score board
                </div>
            </a>
            <a href="#game">
                <div  class="main__container__elem js-start-game">
                    Start Game.
                </div>
            </a>
            <a href="#logout">
                <div class="main__container__elem js-logout">
                    Logout
                </div>
            </a>>
        </fest:if>
        <fest:if test="!json.isAuth">
            <a href="#scoreboard">
                <div class="main__container__elem js-scoreboard">
                    Score board
                </div>
            </a>
            <a href="#login">
                <div class="main__container__elem js-login">
                    Login
                </div>
            </a>
            <a href="#registration">
                <div class="main__container__elem js-registration">
                    Registration
                </div>
            </a>
        </fest:if>
    </div>
</fest:template>
