<fest:template xmlns:fest="http://fest.mail.ru">

    <div id="registration">
        <fest:include  src="./back_button.xml"/>
        <div class="header">
            <h2>SignUp</h2>
        </div>
        <form class="registration__form" name="register" action="/api/v1/auth/signin" method="POST">

            <input class="registration__form__input-field" name="email" type="text" size="25"
                   maxlength="30" value="" placeholder="Email" />
            <input class="registration__form__input-field" name="username" type="text" size="25"
                   maxlength="30" value="" placeholder="Username" />
            <input class="registration__form__input-field"  name="password" type="password"
                   size="25" maxlength="30" value="" placeholder="Password" />
            <input class="registration__form__input-field"  name="password2" type="password"
                   size="25" maxlength="30" value="" placeholder="Repeat password" />
            <input class="registration__form__submit form-submit" type="submit" name="enter" value="Sign up" />

            <div id="form__error-block">
            </div>
        </form>

    </div>
</fest:template>
